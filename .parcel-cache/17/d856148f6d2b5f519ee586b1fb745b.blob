/* css reset */
*{box-sizing:border-box;}
*{:before,*:after{box-sizing:border-box;}}
*{margin:0; padding:0;}

/* style */
body{  background:#eee;}
.globalHeader{
margin: 20px ;
display: flex;
justify-content:  space-between;
}
.globalHeader > input{
    width: 100%;
    margin-right: 10px;
    height: 40px;
    padding: 0 10px;
    border: none;
    border: 1px solid #ddd;
    border-radius: 4px;
}
.globalHeader > button{
    white-space: nowrap;
    padding: 0 28px;
    border: none;
    border-radius: 4px;
    background:#0282B9;
    color: white;
    font-size: 16px;
}

