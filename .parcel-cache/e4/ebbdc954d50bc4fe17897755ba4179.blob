/* css reset */
*{box-sizing:border-box;}
*{:before,*:after{box-sizing:border-box;}}
*{margin:0; padding:0;}

/* style */
body{  background:#eee;}
.globalHeader{
margin: 20px ;
display: flex;
justify-content:  space-between;
}
.globalHeader > input{
    width: 100%;
    margin-right: 10px;
    height: 40px;
    padding: 0 10px;
    border: none;
    border: 1px solid #ddd;
    border-radius: 4px;
}
.globalHeader > button{
    white-space: nowrap;
    padding: 0 28px;
    border: none;
    border-radius: 4px;
    background:#0282B9;
    color: white;
    font-size: 16px;
}

.globalMain{}

.siteList{
    border: 1px solid black;
    margin: 20px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.siteList > li{
    border: 1px solid red;
}
.siteList .site{
    width: 160px;
    display: flex;
justify-content: center;
align-items: center;
flex-direction: column;
background: white;
}
.siteList .site > .logo{
  
    width: 64px;
    height: 64px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 64px;
}
.siteList .site > .link{
    font-size: 14px;
    margin-top: 2px;
}
.siteList .addButton{
    display: flex;
    width: 160px;
    
}

